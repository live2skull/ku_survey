    body
        include navbar_nologin

        //- div.container-fluid.gateway.image

        div.background

        div.gateway-selection.content(ng-controller='loginController')

            //iframe#loginFrame(src='http://portal.korea.ac.kr/front/Intro.kpd', width="0px", height="0px")
            .gateway-login.container

                .row
                    .col-md-6.col-sm-6

                        center(style='margin-top: 20px')
                            img(src='/public/images/logo-fixed-large.png').gateway-splash
                            h4.ku-htext.ku-htext-main 고려대학교 세종캠퍼스
                            h4.ku-htext.ku-htext-main 온라인 학생설문시스템

                    .col-md-6.col-sm-6
                        .ku-form
                            form.login-form
                            input#login_debug(ng-model='login.debug', type='hidden', placeholder='DEBUG Entry ID')
                            button.btn.ku-button(ng-click='click.debugTestLogin("test_student")', type='button', style='width: 100%')
                                i.fa.fa-id-card-o.fa-12x.fa-neg &nbsp;&nbsp;테스트 로그인(학생)
                            button.btn.ku-button(ng-click='click.debugTestLogin("test_professor")', type='button', style='width: 100%')
                                i.fa.fa-id-card-o.fa-12x.fa-neg &nbsp;&nbsp;테스트 로그인(교수)

                    //- WARNING:: 서버 업로드 시 계정 정보 지울 것
            .gateway-login.container.gateway-alertIE(ng-show="flag.isMSIE")
                i.fa.fa-exclamation-triangle.fa-2x
                    i.notice &nbsp;&nbsp;권고사항
                br
                h5.alert-message 현재 Internet Explorer 브라우저를 사용하고 있습니다. 최적의 환경에서 사용하려면&nbsp;
                a.alert-message(href="", ng-click="click.chrome()") Chrome 브라우저
                h5.alert-message 를 이용해주세요.


        include footer
